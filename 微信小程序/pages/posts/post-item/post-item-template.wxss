.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-top: 5px
}

.post-author-date{
  margin: 10rpx 0 20rpx 10rpx
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle
}

.post-date{
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  vertical-align: middle
}

.post-title{
 font-size: 34rpx;
 font-weight: 600;
 color: #333;
 margin-left: 20rpx;
 margin-bottom: 20rpx
}

.post-image{
  width: 100%;
  height: 360rpx;
  margin: auto 0;
  margin-bottom: 30rpx
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-left:20rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx 
}

.post-like{
  margin-left: 20rpx;
  line-height: 32rpx;
  font-size: 26rpx
}

.post-like-image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 16rpx
}

.post-like-font{
  vertical-align: middle;
  margin-right: 40rpx
}